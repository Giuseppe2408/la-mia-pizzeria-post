@model Pizza;



<form asp-controller="Pizza" asp-action="Create" method="post">
  @Html.AntiForgeryToken()
  <div class="form-group">
    <label for="exampleInputEmail1">Nome</label>
    <input type="text" class="form-control" asp-for="Nome" placeholder="Metti il nome">
    <span class="text-danger" asp-validation-for="Nome"></span>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">immagine</label>
    <input type="text" asp-for="Image" class="form-control" placeholder="Metti url immagine">
    <span class="text-danger" asp-validation-for="Image"></span>
  </div>
  <div class="form-group">
    <label for="exampleCheck1">Descrizione</label>
    <textarea type="text" asp-for="Description" class="form-control" placeholder="Metti descrizione"></textarea> 
    <span class="text-danger" asp-validation-for="Description"></span>
  </div>

  <div class="form-group">
    <label for="exampleCheck1">Prezzo</label>
    <input type="number" asp-for="Price" class="form-control" placeholder="Metti prezzo">
    <span class="text-danger" asp-validation-for="Price"></span>
  </div>
  <button type="submit" class="btn btn-primary">Salva</button>
</form>
